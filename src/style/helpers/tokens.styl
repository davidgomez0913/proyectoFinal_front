// Border Radius
border-radius-XS = 0.125rem // 2px
border-radius-SM = 0.1875rem // 3px
border-radius-MD = 0.375rem // 6px
border-radius-LG = 0.75rem // 12px
border-radius-XL = 4rem // 64px
border-radius-round = 50%
// Breakpoints
breakpoint-tablet = 768px
breakpoint-desktop = 1024px
breakpoint-desktop-XL = 1440px
// Colors - Brand
color-brand-black = #151515
color-brand-red = #eb2764
color-brand-green = #A2F321
color-brand-green--light = #cff9da
color-brand-green--dark = #2ECC5E
color-brand-blue = #34fcd8
color-brand-yellow = #FFE200
color-brand-orange = #F36C21
// Colors - Neutrals
color-black = #292a2b
color-gray-dark = #444444
color-gray-medium = #A5B2B5
color-gray = #707070
color-gray-light = #ced7d9
color-gray-highlight = #f0f1f4
color-off-white = #e1e7e8
color-white = #ffffff
// Workshop Colors
color-brown = #261605
color-red = #eb2764
color-green = #162727
color-gree-light = #14B5B5
color-yellow = #ffe6cb
// Colors - States
color-state-success = #5abc76
color-state-warning = #eead40
color-state-error = #f02c2c
// Colors - Third Party
color-third-party-behance = #1769FF
color-third-party-dropbox = #007ee5
color-third-party-facebook = #4b6eaa
color-third-party-foursquare = #0072b1
color-third-party-linkedin = #007bb5
color-third-party-pinterest = #CB2027
color-third-party-snapchat = #fffc00
color-third-party-spotify = #00E461
color-third-party-tumblr = #32506d
color-third-party-twitter = #55ACEE
color-third-party-whatsapp = #4DC247
color-third-party-youtube = #ff0000
// Elevations
elevation-1 = 0 2px 4px 0 rgba(color-black, 0.25)
elevation-2 = 0 4px 8px 0 rgba(color-black, 0.3)
elevation-3 = 0 6px 12px 0 rgba(color-black, 0.35)
elevation-4 = 0 8px 16px 0 rgba(color-black, 0.4)
// Font Family
font-family-default = "Playfair Display"
font-family-title = "Playfair Display"
font-family-sans = -apple-system, BlinkMacSystemFont, "Segoe UI", Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
font-family-serif = "Times New Roman", Times, serif
// Font Sizes
font-size-base = 16px
font-size-XS = (font-size-base * 0.6875) // 11px
font-size-SM = (font-size-base * 0.8125) // 13px
font-size-MD = (font-size-base * 0.9375) // 15px
font-size-LG = (font-size-base * 1) // 16px
font-size-XL = (font-size-base * 1.25) // 20px
font-size-2XL = (font-size-base * 1.5) // 24px
font-size-3XL = (font-size-base * 2) // 32px
font-size-4XL = (font-size-base * 2.5) // 40px
font-size-5XL = (font-size-base * 3) // 48px
font-size-6XL = (font-size-base * 3.5) // 56px
// Font Weights
font-weight-reg = 400
font-weight-med = 500
font-weight-bld = 700
font-weight-blk = 900
// Line Heights
line-height-XS = 1
line-height-SM = 1.125
line-height-MD = 1.25
line-height-LG = 1.5
line-height-XL = 2
// Sizing
sizing-base = 1rem // 16px
sizing-3XS = 1px // 1px
sizing-2XS = (sizing-base * 0.125) // 2px
sizing-XS = (sizing-base * 0.25) // 4px
sizing-SM = (sizing-base * 0.5) // 8px
sizing-MD = (sizing-base * 0.75) // 12px
sizing-LG = (sizing-base * 1) // 16px
sizing-XL = (sizing-base * 1.5) // 24px
sizing-2XL = (sizing-base * 2) // 32px
sizing-3XL = (sizing-base * 2.5) // 40px
sizing-4XL = (sizing-base * 3) // 48px
sizing-5XL = (sizing-base * 3.5) // 56px
sizing-6XL = (sizing-base * 4) // 64px
// Text Color
text-color-default = color-gray-dark
text-color-disabled = color-gray
text-color-error = color-state-error
text-color-link = color-brand-blue
text-color-link-hover = darken(text-color-link, 12%)
text-color-muted = color-gray-medium
text-color-slate = color-brand-slate
text-color-success = color-state-success
text-color-warning = color-state-warning
// Transitions
transition-1 = 200ms ease-in-out
transition-2 = 300ms ease-in-out
transition-3 = 500ms ease-in-out
transition-4 = 750ms ease-in-out
// Z-Index
z-index-backtap = -1
z-index-fab = 1000
z-index-tooltip = 2000
z-index-toast = 3000
z-index-dropdown = 4000
z-index-backdrop = 5000
z-index-banner = 5050
z-index-nav = 6000
z-index-modal = 7000
z-index-spinner = 8000
// custom
vendor-prefixes = webkit moz o ms official
scrollbar = scrollbars(5, color-brand-red)
// element sizing
element-sizing-button = rem(50)
bg-soft-gradient = linear-gradient(119deg, color-white, color-gray-light 102%)