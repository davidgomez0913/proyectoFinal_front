@require "./mixins"

.square
    position: relative
    display: block

    &::after
        content: ""
        padding-bottom: 100%
        display: block

    &__content
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

.hidden
[hidden]
    display: none
    visibility: hidden

.no-scroll
    overflow: hidden

    &--y
        overflow: auto
        overflow-y: hidden

    &--x
        overflow: auto
        overflow-x: hidden